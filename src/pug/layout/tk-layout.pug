include ../utils/mixins
block variables

doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=0")
        meta(name="format-detection" content="telephone=no")
        meta(name="description", content=description)
        title #{title}
        block head

    body(class=pageClass)
        #app
            block header
                include ../includes/modules/header


            block content

            block footer
                include ../includes/modules/footer

        block layout
            .layout
               div(
                   class="layout__background layout__background--image"
                   style="background-image: url('../../assets/img/main-background-grey.png')"
               )
               video(
                   class="layout__background layout__background--video js-bg"
                   width='100%' height='100%'
                   src='../../assets/video/main-background-white2.mp4'
                   poster='../../assets/img/main-background-grey.png'
                   muted loop
                   autoplay
                   )

        block modals

        block script
